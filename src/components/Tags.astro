---
import Tag from './Tag.astro';

interface Props {
  tags: string[];
  withHref?: boolean;
}

const { tags, withHref } = Astro.props;
---

<div class="flex flex-wrap">
  {
    tags && tags.length > 0
      ? tags.map((tag: string) => {
          const element = <Tag tag={tag} withHref={withHref} />;
          return withHref ? <a href={`/tags/${tag}`}>{element}</a> : element;
        })
      : <p>No tags available.</p>
  }
</div>